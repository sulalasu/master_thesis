	pages = {22031},
	file = {Volltext:/media/lukas/Shared_Volume/Zotero/storage/F75W2ANY/Sarvestani et al. - 2022 - Forecasting blood demand for different blood groups in Shiraz using auto regressive integrated movin.pdf:application/pdf},
